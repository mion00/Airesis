    width: 225px;
    height: 180px;
    border: 1px dotted #ccc;
    cursor: pointer;
    margin: 5px;

    &:hover {
        opacity: 0.8;
    }

    .model_name {
        font-size: 2em;
        text-align: center;
        margin-top: 10px;
        .name {
            height: 80px;
        }
    }
}

.arrow_right {
    width: 0;
    height: 0;
    border-top: 13px solid transparent;
    border-bottom: 13px solid transparent;
    border-left: 13px solid #fb3;
    position: absolute;
    top: 1px;
    right: -13px;
}

.first .arrow_right {
    border-left-color: #fff;
}

.btn.later {

}


#create_proposal, #create_event, #promote_steps {
    form {
        overflow: hidden;
        max-width:1280px;
        margin:auto;
        clear: both;
    }
    .bread-crumb {
        list-style: none outside none;
        padding: 0;
        width: 100%;
        margin: auto;
        max-width:1280px;
        height: 47px;
        li {
            float: left;
            position: relative;
            padding-left: 3px;
            padding-right: 3px;
            font-weight: bold;
            cursor: default;

            div.step_title {
                color: #CCCCCC;
                background: #F8F8F8;
                border: 1px solid #CCC;
                padding: 5px 30px;
                border-top: 1px solid #ccc;
                border-bottom: 1px solid #ccc;
                padding: 3px 20px;
                border-radius: 5px;

                &.first {
                    border-left: 1px solid #ccc;
                }

                &.last {
                    border-right: 1px solid #ccc;
                }

                .number {
                    display: inline-block;
                    font-size: 2em;
                    font-family: verdana;
                    width: 23px;
                }

                .title {
                    display: inline-block;
                    overflow: hidden;
                    white-space: nowrap;
                }
            }

            &.bread-crumb-completed {
                /*cursor: pointer;*/
                div.step_title {
                    color: #FFF;
                    background: #8CC63F;
                    border: 1px solid #8CC63F;
                }
            }

            &.bread-crumb-active {
                div.step_title {
                    color: #F8F8F8;
                    background: #EA8511;
                    border: 1px solid #EA8511;
                }
            }

        }
    }
}

#create_proposal, #create_event {
    .bread-crumb {
        li {
            width: 240px;
            .title {
                width: 165px;
            }
        }
    }
}

#promote_steps {
    .bread-crumb {
        li {
            width: 180px;
            .title {
                width: 100px;
            }
        }
    }
    div.step {
        text-align: center;
    }
}

#proposals_table td.first {
    width: 60%;
}

#proposals_table td.second {
    width: 40%;
}

@media (min-width: $medium-screen) {
    .suggestion_right {
        right: 90px;
    }
}

@media (max-width: $medium-screen - 1) {
    .suggestion_right {
        right: 20px;
    }
}

.suggestion_right {
    position: fixed;
    top: 92px;
    left: 1110px;
    background-color: #fff;
    overflow: auto;
    color: black;
    border: 1px solid #E2E2E2;
    border-radius: 3px;
    height: 100%;
    padding: 5px;
}

.suggest .tria {
    position: absolute;
    right: -24px;
    margin-top: -40px;
    height: 38px;
    width: 20px;
    display: none;
}

.suggest_l .ui-icon {
    position: absolute;
}

.suggest_l .ui-icon.bulb {
    right: -22px;
    top: 0px;
}

.suggest_l .ui-icon.clock {
    right: -22px;
    top: 15px;
}

.suggest_l .ui-icon.star {
    right: -22px;
    top: 30px;
}

.suggestion_right::-webkit-scrollbar {
    width: 8px;
}

.suggestion_right::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 0px rgb(0, 0, 0);
    border-radius: 10px;
}

.suggestion_right::-webkit-scrollbar-thumb {
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 6px rgba(255, 255, 255, 0);
}

