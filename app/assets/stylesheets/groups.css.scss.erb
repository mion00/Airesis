@media (max-width: 1200px) {
    .groupListContainer {
        width: 100%;
    }
}

@media (min-width: 1201px) and (max-width: 1600px) {
    .groupListContainer {
        width: 50%;
    }
}

@media (min-width: 1601px) {
    .groupListContainer {
        width: 33%;
    }
}


.groupListContainer {
    float: left;
    .inner {
        background: repeat scroll 0 0 #FFF;
        margin-bottom: 15px;
        margin-right: 15px;
        padding: 10px;
        position: relative;
        height:  140px;
    }
    h3 {
        font-size: 18px;
        line-height: 20px;
        margin: 0px;
        white-space: nowrap;
        text-transform: uppercase;
    }
    .groupDescription {
        .count {
            vertical-align: middle;
        }
    }
    .group_tag_desc {
        height: 60px;
        font-size: 0.8em;
        line-height: 1.2em;
        text-align: justify;
        overflow: hidden;
        margin-bottom: 5px;
        margin-top: 5px;
        position: relative;
        .fade_out {
            position: absolute;
            bottom: 0px;
            height: 30px;
            width: 100%;
            background: -webkit-linear-gradient(rgba(255, 255, 255, 0) 20%, rgba(255, 255, 255, 1) 100%);
            background-image: -moz-linear-gradient(rgba(255, 255, 255, 0) 20%, rgba(255, 255, 255, 1) 100%);
            background-image: -o-linear-gradient(rgba(255, 255, 255, 0) 20%, rgba(255, 255, 255, 1) 100%);
            background-image: linear-gradient(rgba(255, 255, 255, 0) 20%, rgba(255, 255, 255, 1) 100%);
            background-image: -ms-linear-gradient(rgba(255, 255, 255, 0) 20%, rgba(255, 255, 255, 1) 100%);
        }
    }
    .groupUserImage {
        padding-bottom:3px;
        max-height: 90px;
        overflow: hidden;
    }
    .groupName {
        overflow: hidden;
        position: relative;
    }
}


