.switch_opt {
    width: 14px;
    height: 14px;
    text-align:  center;
    &.s_circle {
        border: 3px solid #888;
        border-radius: 50%;

        .i_circle {
            border: 2px solid #888;
            border-radius: 50%;
            width: 1px;
            height: 1px;
            margin: auto;
            margin-top: 2px;
            background-color: #888;
        }
    }
}



.on {
    .s_circle {
        border-color: #888;
        .i_circle {
            border-color: #888;
            background-color: #888;
        }
    }
}

.off {
    .s_circle {
        border-color: #ccc;
        .i_circle {
            border-color: #ccc;
            background-color: #ccc;
        }
    }
}
