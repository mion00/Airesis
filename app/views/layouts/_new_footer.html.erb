    <script type="text/javascript">

        function openCondizioniModal() {
            $("#eula_modal").dialog({ height: 250, width: 450 });
            return false;
        }

        function openPrivacyModal() {
            $("#privacy_modal").dialog({ height: 250, width: 450 });
            return false;
        }


        $(function () {

            $('.language.footer').qtip({
                position: {
                    at: 'top center',
                    my: 'bottom center',
                    viewport: $(window)
                },
                style: {
                    classes: 'qtip-shadow qtip-bootstrap'
                },
                show: {
                    event: 'click mouseenter',
                    solo: true
                },
                hide: {
                    event: 'click mouseleave'
                }
            });


            $('#language').on('opened', function () {
                $(this).find('.row a').qtip({
                    style: {
                        classes: 'qtip-shadow qtip-bootstrap'
                    },
                    position: {
                        at: 'left center',
                        my: 'right center'
                    }
                });
                $(this).foundation('section', 'reflow');
            });

        })
    </script>
