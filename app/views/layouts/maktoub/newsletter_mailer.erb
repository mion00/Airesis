<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>

  <!-- Facebook sharing information tags -->
  <meta property="og:title" content="<%= @subject %>"/>
  <meta name="viewport" content="width=680px, initial-scale=0.5">
  <title><%= @subject %></title>
</head>
<body leftmargin="0" marginwidth="0" topmargin="0" marginheight="0" offset="0">
<center>
  <table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" id="backgroundTable">
    <tr>
      <td align="center" valign="top">
        <!-- // Begin Template Preheader \\ -->
        <table border="0" cellpadding="10" cellspacing="0" width="600" id="templatePreheader">
          <tr>
            <td valign="top" class="preheaderContent">

              <!-- // Begin Module: Standard Preheader \ -->
              <table border="0" cellpadding="10" cellspacing="0" width="100%">
                <tr>
                  <td valign="top">
                    <div>
                      <%= yield(:teaser) %>
                    </div>
                  </td>
                </tr>
              </table>
              <!-- // End Module: Standard Preheader \ -->

            </td>
          </tr>
        </table>
        <!-- // End Template Preheader \\ -->
        <table border="0" cellpadding="0" cellspacing="0" width="600" id="templateContainer">
          <tr>
            <td align="center" valign="top">
              <!-- // Begin Template Header \\ -->
              <table border="0" cellpadding="0" cellspacing="0" width="600" id="templateHeader">
                <tr>
                  <td class="headerContent">

                    <!-- // Begin Module: Standard Header Image \\ -->
                    <img style="max-width:80px;float:left" src="<%= Maktoub.home_url %>/assets/logo120.png">
                    <%= link_to ("<h1 style='float:left;margin: 25px 10px 10px;text-decoration: none;'>"+Maktoub.app_name+"</h1>").html_safe, Maktoub.home_url, :target => "_blank" %>
                    <!-- // End Module: Standard Header Image \\ -->
                    <div style="clear: both;"></div>
                    <hr/>
                  </td>
                </tr>
              </table>
              <!-- // End Template Header \\ -->
            </td>
          </tr>
          <tr>
            <td align="center" valign="top">
              <!-- // Begin Template Body \\ -->
              <table border="0" cellpadding="0" cellspacing="0" width="600" id="templateBody">
                <tr>
                  <td valign="top" class="bodyContent">

                    <!-- // Begin Module: Standard Content \\ -->
                    <table border="0" cellpadding="20" cellspacing="0" width="100%">
                      <tr>
                        <td valign="top">
                          <div mc:edit="std_content00">
                            <%= yield %>
                          </div>
                        </td>
                      </tr>
                    </table>
                    <!-- // End Module: Standard Content \\ -->

                  </td>
                </tr>
              </table>
              <!-- // End Template Body \\ -->
            </td>
          </tr>
          <tr>
            <td align="center" valign="top">
              <!-- // Begin Template Footer \\ -->
              <table border="0" cellpadding="10" cellspacing="0" width="600" id="templateFooter">
                <tr>
                  <td valign="top" class="footerContent">

                    <!-- // Begin Module: Standard Footer \\ -->
                    <table border="0" cellpadding="10" cellspacing="0" width="100%">
                      <% if ::Configuration.socialnetwork_active %>
                          <tr>
                            <td colspan="2" valign="middle" id="social">
                              <div mc:edit="std_social">
                                &nbsp;
                                <% unless Maktoub.twitter_url.blank? %>
                                    <%= link_to t('mailer.default.follow_twitter'), Maktoub.twitter_url, :target => "_blank" %>
                                <% end %>
                                <% unless Maktoub.facebook_url.blank? %>
                                    |
                                    <%= link_to t('mailer.default.follow_facebook'), Maktoub.facebook_url, :target => "_blank" %>
                                <% end %>
                                <% unless Maktoub.google_plus_url.blank? %>
                                    |
                                    <%= link_to t('mailer.default.follow_google'), Maktoub.google_plus_url, :target => "_blank" %>
                                <% end %>
                                &nbsp;
                              </div>
                            </td>
                          </tr>
                      <% end %>
                      <%@ruser = @resource || @user || @to || @alert.try(:user) || User.find(55)  %>
                      <%@url = @ruser.original_locale.host %>
                      <%@url += "?l=#{@ruser.original_locale.lang}" if @ruser.original_locale.lang%>

                      <tr>
                        <td valign="top" width="350">
                          <div mc:edit="std_footer">
                            <em>Copyright &copy; <%= Time.now.year %> <%= Maktoub.app_name %>.</em>
                            <br/>
                            <em><%=raw t('mailer.default.footer.registered_at', url: (link_to @url, @url, :target => "_blank")) %></em>
                            <br/>
                            <%- unless @archive %>
                                <%# we are not including mailing addresses %>
                                <%#<br /><strong>Our mailing address is:</strong><br /> %>
                                <%#  %>
                            <%- end %>
                          </div>
                        </td>

                      </tr>
                      <tr>
                        <td colspan="2" valign="middle" id="utility">
                          <div>
                            &nbsp;<%= link_to t('mailer.default.edit_preferences'), main_app.alarm_preferences_users_url(:host => @ruser.original_locale.host, l: @ruser.original_locale.lang), :target => "_blank" %>
                          </div>
                        </td>
                      </tr>
                    </table>
                    <!-- // End Module: Standard Footer \\ -->

                  </td>
                </tr>
              </table>
              <!-- // End Template Footer \\ -->
            </td>
          </tr>
        </table>
        <br/>
      </td>
    </tr>
  </table>
</center>
</body>
</html>