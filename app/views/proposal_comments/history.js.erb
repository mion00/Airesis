var container_ = $('<%= j (render(:partial => 'history'))%>');
$('body').append(container_);

container_.foundation('reveal', 'open');
container_.css('max-height', $('html').height() - 110 + 'px').css('overflow-y','auto');
$(document).on('opened', '[data-reveal]', function () {
    $('html').css('overflow', 'hidden');
});

$(document).on('closed', '[data-reveal]', function () {
    $('html').css('overflow', '');
    container_.remove();
});