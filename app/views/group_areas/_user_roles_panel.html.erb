<%if @group_area.area_partecipations.count > 0 %>
<table id="roles_table">
	<thead>
		<th><%= t('pages.groups.edit_permissions.user_title') %></th>
		<th><%= t('pages.groups.edit_permissions.role_title') %></th>
	</thead>
	<tbody>
		<%@group_area.area_partecipations.each do |gp| %>
		<tr>
			<td>
              <%= gp.user.user_image_tag 16 %>
              <%= link_to gp.user.fullname, gp.user %>
			</td>
			<td>
				<%=select_tag "user_role", options_from_collection_for_select(@group_area.area_roles,:id,:name,gp.area_role.id), "data-user_id" => gp.user.id, :class => "user_role_changer" %>
			</td>
		</tr>
		<%end%>
	</tbody>
</table>
<%else%>
    <h4><%= t('pages.groups.edit_permissions.no_users_yet') %></h4>
<%end%>